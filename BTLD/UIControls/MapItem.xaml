<UserControl x:Class="BTLD.UIControls.MapItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BTLD.UIControls"
             mc:Ignorable="d" Height="60" Width="300"
             FontFamily="Squarish Sans CT, Source Han Sans" Typography.Capitals="SmallCaps" Foreground="White"
             d:DesignHeight="60" d:DesignWidth="300">
    <Grid>
        <Border x:Name="uiMapBorder" BorderBrush="#b0aba8" BorderThickness="5" CornerRadius="30">
            <Border.Background>
                <ImageBrush x:Name="uiMapThumbs" ImageSource="../Resources/DefaultMap.jpg" Stretch="UniformToFill"/>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect BlurRadius="5" Color="Gray" Opacity="0.5" Direction="-30"/>
            </Border.Effect>
        </Border>
        <Border BorderBrush="#00000000" BorderThickness="5" CornerRadius="30" Background="#7f000000">
            <TextBlock x:Name="uiMapName" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1" Text="" Margin="30,0,30,0" FontSize="16" TextTrimming="CharacterEllipsis"/>
        </Border>
    </Grid>
</UserControl>
