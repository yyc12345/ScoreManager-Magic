<UserControl x:Class="BTLD.UIControls.StandingItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BTLD.UIControls"
             mc:Ignorable="d" x:Name="uiRoot"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Ellipse x:Name="uiAvatar" Width="{Binding ElementName=uiRoot, Path=CircleSize}" Height="{Binding ElementName=uiRoot, Path=CircleSize}" HorizontalAlignment="Center" StrokeThickness="10" Stroke="White">
            <Ellipse.Fill>
                <ImageBrush x:Name="uiAvatarThumbs" ImageSource="../Resources/DefaultUser.jpg"/>
            </Ellipse.Fill>
        </Ellipse>

        <TextBlock x:Name="uiUsername" Text="" HorizontalAlignment="Center" Margin="10" Grid.Row="1" FontSize="16"/>
    </Grid>
</UserControl>
