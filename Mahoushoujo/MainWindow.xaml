                                            <DataGridTextColumn Header="name (sm__name)" Binding="{Binding sm_name}"/>
                                            <DataGridTextColumn Header="password (sm__password)" Binding="{Binding sm_password}"/>
                                            <DataGridTextColumn Header="registration (conv sm__registration)" Binding="{Binding conv_registration}"/>
                                            <DataGridTextColumn Header="priority (conv sm__priority)" Binding="{Binding conv_priority}"/>
                                            <DataGridTextColumn Header="salt (sm__salt)" Binding="{Binding sm_salt}"/>
                                            <DataGridTextColumn Header="token (sm__token)" Binding="{Binding sm_token}"/>
                                            <DataGridTextColumn Header="expireOn (conv sm__expireOn)" Binding="{Binding conv_expireOn}"/>
                                        </DataGrid.Columns>
                                        <DataGrid.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Copy names (JSON)"/>
