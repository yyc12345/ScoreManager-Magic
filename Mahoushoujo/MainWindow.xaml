                                        </Grid>
                                    </Expander>
                                    <Button Grid.Column="2" Grid.Row="0" MaxHeight="50" Content="Query" Margin="5" Click="func_queryTournament"/>

                                    <DataGrid x:Name="uiQueryTournamentResult" ItemsSource="{Binding}" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" CanUserReorderColumns="False" CanUserSortColumns="False" IsReadOnly="true" AutoGenerateColumns="False" SelectionUnit="FullRow" SelectionMode="Single" Background="#00000000" BorderThickness="1" Margin="5" HorizontalScrollBarVisibility="Visible">
