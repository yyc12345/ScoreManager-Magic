                                    <CheckBox Grid.Column="0" Grid.Row="2" Content="Map" Margin="5"/>
                                    <CheckBox Grid.Column="0" Grid.Row="3" Content="Ban map (inner JSON)" Margin="5"/>
                                    <CheckBox Grid.Column="0" Grid.Row="4" Content="Winner" Margin="5"/>
