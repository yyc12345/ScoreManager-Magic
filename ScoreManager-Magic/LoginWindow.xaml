<Window x:Class="ScoreManager_Magic.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:control="clr-namespace:ScoreManager_Magic.UIControl"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScoreManager_Magic"
        mc:Ignorable="d"
        Title="{DynamicResource ui_LoginWindow_Title}" Height="250" Width="400">
    <Grid Background="#7f7f7f">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <control:Login Margin="10"/>
        <control:StatusBar Margin="10" Grid.Row="1"/>

    </Grid>
</Window>
